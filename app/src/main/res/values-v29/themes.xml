<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ValorantGuideStats" parent="Base.Theme.ValorantGuideStats">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/valorant_blue</item>
        <item name="android:statusBarColor">@color/valorant_blue_light</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Theme.ValorantGuideStats.Splash" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/valorant_blue
        </item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_logo</item>
        <item name="splashScreenIconSize">260dp</item>
        <item name="postSplashScreenTheme">@style/Theme.ValorantGuideStats</item>
    </style>
</resources>